<div class="page-header">
  <h3>User #<%= @user.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Username</dt>
      <dd><%= @user.username %></dd>

      <dt>Email</dt>
      <dd><%= @user.email %></dd>

      <dt>Photos</dt>
      <dd>
        <% @user.photos.each do |photo| %>
        <tr>
          <td><img src ="<%= photo.image %>"></td>
          <td><%= photo.caption %></td>
        </tr>
        <% end %>
      </dd>
    </dl>

  </div>
</div>
